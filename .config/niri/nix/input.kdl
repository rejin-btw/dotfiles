cursor {
    xcursor-theme "phinger-cursors-dark-left"
    xcursor-size 24
}

input {
    keyboard {
        xkb {
            options "altwin:swap_alt_win"
        }
        numlock
    }

    touchpad {
        tap
        natural-scroll
    }

    mouse {
        accel-speed 1
        left-handed
    }

    focus-follows-mouse max-scroll-amount="0%"
}
