# interpreter for shell commands
set shell sh

# set '-eu' options for shell commands
set shellopts '-eu'

# set internal field separator (IFS) to "\n" for shell commands
set ifs "\n"

# leave some space at the top and the bottom of the screen
set scrolloff 10

# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# use enter for shell commands
map <enter> open

# show the result of execution of previous commands
map ` !true

# execute current file (must be executable)
map x $$f
map X !$f

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# mkdir command
map a :push %mkdir<space>

# move current file or selected files to trash folder
cmd trash %set -f; mv -t ~/.trash $fx

# extract the current file with the right command
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

cmd fzf_select ${{
    res="$(fd . | fzf)"
    [ -n "$res" ] && lf -remote "send select '$res'"
}}

map f fzf_select

# Set default editor
set editor nvim

# --- UPDATED OPEN COMMAND ---
cmd open ${{
    case "$f" in
        # 1. Explicitly open shell scripts and config files in nvim
        #    Added: .conf, .config, .cfg, .ini, .yml, .yaml, .toml, .lua, .json
        *.sh|*.conf|*.config|*.cfg|*.ini|*.yml|*.yaml|*.toml|*.lua|*.json|*rc) 
            nvim "$fx" 
            ;;
        *) 
            # 2. Fallback: Check MIME type for other text files (e.g. Makefiles, unknown source code)
            case $(file --mime-type -Lb "$f") in
                text/*|application/json|application/x-shellscript) 
                    nvim "$fx" 
                    ;;
                *) 
                    # 3. Everything else (Images, PDFs) goes to system default
                    setsid -f xdg-open "$fx" >/dev/null 2>&1 
                    ;;
            esac
            ;;
    esac
}}

# Map 'l' to the open command
map l open

map D delete
map <delete> delete

